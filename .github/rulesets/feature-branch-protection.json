{
  "name": "Feature Branch Protection",
  "description": "Feature branch'ler i√ßin minimum koruma",
  "target": "branch",
  "enforcement": "active",
  "bypass_actors": [],
  "conditions": {
    "ref_name": {
      "include": ["refs/heads/feature/**", "refs/heads/fix/**"],
      "exclude": []
    }
  },
  "rules": [
    {
      "type": "required_status_checks",
      "parameters": {
        "strict_required_status_checks_policy": false,
        "required_status_checks": [
          {
            "context": "ci/backend:lint"
          },
          {
            "context": "ci/frontend:lint"
          }
        ]
      }
    },
    {
      "type": "non_fast_forward"
    }
  ]
}

