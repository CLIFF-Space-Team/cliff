{
  "name": "Development Branch Protection",
  "description": "Development branch i√ßin orta seviye koruma",
  "target": "branch",
  "enforcement": "active",
  "bypass_actors": [],
  "conditions": {
    "ref_name": {
      "include": ["refs/heads/develop", "refs/heads/dev"],
      "exclude": []
    }
  },
  "rules": [
    {
      "type": "pull_request",
      "parameters": {
        "required_approving_review_count": 1,
        "dismiss_stale_reviews_on_push": false,
        "require_code_owner_review": false,
        "require_last_push_approval": false
      }
    },
    {
      "type": "required_status_checks",
      "parameters": {
        "strict_required_status_checks_policy": false,
        "required_status_checks": [
          {
            "context": "ci/backend:test"
          },
          {
            "context": "ci/frontend:test"
          },
          {
            "context": "ci/frontend:build"
          }
        ]
      }
    },
    {
      "type": "required_linear_history"
    },
    {
      "type": "non_fast_forward"
    }
  ]
}

